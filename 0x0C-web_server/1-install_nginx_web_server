#!/bin/bash

# Update package list
apt-get update

# Install nginx
apt-get install -y nginx

# Start nginx
service nginx start

# Create a default HTML file
echo "Hello World!" > /var/www/html/index.html

# Check if nginx is running
if pgrep -x "nginx" > /dev/null
then
    echo "Nginx is running."
else
    echo "Error: Nginx is not running."
fi

